---
const { title = "Capucine et Tournesol" } = Astro.props;
const { pathname } = Astro.props;
const isHome = pathname === '/';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content="La seule boulangerie meunerie à Montréal" />
     <link
      rel="preload"
      href="/Technical.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    >
    <link rel="preload" href="/logo-header.svg" as="image">


  </head>
  <body>
    <Header />
  <main class={isHome ? 'main--home' : 'main--content'}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
