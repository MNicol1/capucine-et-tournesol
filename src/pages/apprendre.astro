   <!-- CODE SCRIPT FOR ACTIVE SECTION STATE - JS + Intersection Observer API -->


   
<script is:inline>
  const navLinks = document.querySelectorAll('.section-nav a');
const sections = document.querySelectorAll('.page-content section');


  let observerActive = true;

  function setActiveLink(id) {
    navLinks.forEach(link => {
      link.classList.toggle('active', link.getAttribute('href') === `#${id}`);
    });
  }

  // Always set first link active on load
  if (navLinks.length > 0) {
    navLinks[0].classList.add('active');
  }

  const observer = new IntersectionObserver(entries => {
    if (!observerActive) return;

    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.getAttribute('id');
        setActiveLink(id);
      }
    });
  }, {
    rootMargin: '-179px 0px 0px 0px',
    threshold: 0.5
  });

  sections.forEach(section => observer.observe(section));

  // Handle click highlighting
  navLinks.forEach(link => {
    link.addEventListener('click', () => {
      const href = link.getAttribute('href');
      if (href && href.startsWith('#')) {
        const id = href.slice(1);
        setActiveLink(id);

        observerActive = false;
        setTimeout(() => observerActive = true, 500);
      }
    });
  });
</script>




