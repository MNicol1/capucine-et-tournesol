
---
import BaseLayout from '../layouts/BaseLayout.astro';
import content from '../content/home.json';
---

<BaseLayout >
  <main class="main--home">
<div class="home-cta-sections">

  <!-- Section 1 -->
  <section class="cta-block">
    <div class="cta-image">
<img src={`${import.meta.env.BASE_URL}images/${content.image1}`} alt={content.imageAlt1} width="1600" height="1067" />

    </div>
    <div class="cta-text">
      <div class="cta-content">
        <h1>{content.text1}</h1>
     <h2>
  <a href={`${import.meta.env.BASE_URL}notre-mission/#mile-end`} class="mile-end-link">
    {content.text2}
  </a>
</h2>

      </div>
    </div>
  </section>

  <!-- Section 2 -->
  <section class="cta-block reverse">
    <div class="cta-image">
      <img src={`${import.meta.env.BASE_URL}images/${content.image2}`} alt={content.imageAlt2} loading="lazy" width="1600" height="1302" />

    </div>
    <div class="cta-text">
      <div class="cta-content">
       <h2>{content.text3}</h2>
       <h3>{content.text4}</h3>
      </div>
  

      <a href={`${import.meta.env.BASE_URL}produits/`} class="cta-button">DÃ©couvrir nos produits</a>
    </div>
