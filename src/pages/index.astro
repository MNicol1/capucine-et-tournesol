
---
import BaseLayout from '../layouts/BaseLayout.astro';
import content from '../content/home.json';
---

<BaseLayout pathname={Astro.url.pathname}>
<!-- Inside the page that gets slotted into BaseLayout -->
<div class="home-cta-sections">

  <!-- Section 1 -->
  <section class="cta-block">
    <div class="cta-image">
      <img src={`/images/${content.image3}`} alt={content.imageAlt1} />
    </div>
    <div class="cta-text">
      <div class="cta-content">
        <h1>{content.text1}</h1>
        <h3> <a href="/notre-mission#mile-end" class="mile-end-link">{content.text2}</a></h3>
      </div>

      <!-- <a href="/notre-mission" class="cta-button">About Us</a> -->
    </div>
  </section>

  <!-- Section 2 -->
  <section class="cta-block reverse">
    <div class="cta-image">
      <img src={`/images/${content.image2}`} alt={content.imageAlt2} />
    </div>
    <div class="cta-text">
      <div class="cta-content">
       <h2>{content.text3}</h2>
       <h3>{content.text4}</h3>
      </div>
  

      <a href="/produits" class="cta-button">DÃ©couvrir nos produits</a>
    </div>
  </section>

  <!-- Section 3 -->
  <section class="cta-block">
