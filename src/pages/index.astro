    <div class="cta-image">
  <img src={`${import.meta.env.BASE_URL}images/${content.image3}`} alt={content.imageAlt3} width="1600" 
  height="1380" loading="lazy"  />

    </div>
    <div class="cta-text">
      <div class="cta-content">
<h2>
  {content.text5}
  <a class="link-inherit" href={`${import.meta.env.BASE_URL}informations-utiles/`}>{content.link1}</a>
  {content.text6}
  <a class="link-inherit" href={`${import.meta.env.BASE_URL}faire-son-pain/`}>{content.link2}</a>
</h2>


        </div>
    </div>
  </section>

</div>
</main>

</BaseLayout>
